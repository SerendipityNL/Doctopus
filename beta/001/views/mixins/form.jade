mixin text(label, element, name, value)
	div.option-container
		div.option-definition= label
		div.option-definition 
			input(type="text", name='#{name}', value='#{value}', size='5', data-element="#{element}")

mixin text_xs(label, element, name, value)
	div.option-container
		div.option-definition= label
		div.option-definition 
			input(type="text", name='#{name}', value='#{value}', size='4', data-element="#{element}")

mixin color(label, element, name, value)
	div.option-container
		div.option-definition= label
		div.option-definition 
			input(type="text", name='#{name}', value='#{value}', size='4', data-element="#{element}", class="color")

mixin select(label, element, name, options, selected)
	div.option-container
		div.option-definition= label
		div.option-definition
			div.select-arrow 
				select(name="#{name}", data-element="#{element}")
					each key, value in options
						if value == selected
							option(value="#{value}", selected="selected")= key
						else
							option(value="#{value}")= key
