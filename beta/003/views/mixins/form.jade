mixin select(label, element, name, options, selected)
	div.option-container
		div.option-definition
			label(for="id-#{element}-#{name}")= label
		div.option-definition
			div.select-arrow 
				select(name="#{name}", data-element="#{element}", id="id-#{element}-#{name}")
					each key, value in options
						if value == selected
							option(value="#{value}", selected="selected")= key
						else
							option(value="#{value}")= key
