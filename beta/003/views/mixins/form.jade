mixin text(label, element, name, value)
	div.option-container
		div.option-definition
			label(for="id-#{element}-#{name}")= label
		div.option-definition 
			input(type="text", name='#{name}', value='#{value}', size='20', data-element="#{element}", id="id-#{element}-#{name}")

